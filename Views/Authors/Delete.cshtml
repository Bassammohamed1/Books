@model Author
@{
    ViewData["Title"] = "Delete Author";
}
<form method="post">
    <div class="window" style="background-color:#E6E6FA;padding:20px;">
        <p3>Are you sure you want to delete this Author</p3>
        <div class="buttons" style="padding-top:10px;">
            <button type="submit" class="btn btn-warning">Okay</button>
            <a asp-controller="Authors" asp-action="Index" class="btn btn-secondary">
                Back to Authors
            </a>
        </div>
    </div>
</form>