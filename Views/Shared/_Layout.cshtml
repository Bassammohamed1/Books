<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Books</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="Vex HTML Template">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0">
    <meta name="author" content="Themefisher">
    <meta name="generator" content="Themefisher Vex HTML Template v1.0">
    <meta name="theme-name" content="vex" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Droid&#43;Serif:400%7cJosefin&#43;Sans:300,400,600,700 ">
    <link rel="stylesheet" href="~/plugins/bootstrap/bootstrap.min.css ">
    <link rel="stylesheet" href="~/plugins/themefisher-font/themefisher-font.min.css ">
    <link rel="stylesheet" href="~/plugins/slick/slick.min.css ">
    <link href="~/css/style.css" rel="stylesheet">
    <link rel="icon" href="~/images/favicon.png" type="image/x-icon">
    <link rel="stylesheet" href="https://cdn.jsdelivr.xyz/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body id="body">
    <div class="preloader"></div>
    <header class="navigation sticky-top bg-white">
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-light">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="~/images/books.png" alt="Books" style="width:100px" />
                </a>
                <button class="navbar-toggler p-0 border-0" type="button" data-toggle="collapse" data-target="#navigation"
                        aria-controls="navigation" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse text-center" id="navigation">
                    <ul class="navbar-nav ml-auto mr-n0 mr-md-n3">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index"><i class="bi bi-house-door"></i> Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#!" id="dropdown03" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="bi bi-list"></i> Categoties <i class="tf-ion-chevron-down"></i></a>
                            <ul class="dropdown-menu" aria-labelledby="dropdown03">
                                <li><a class="dropdown-item" asp-controller="Books" asp-action="HorrorBooks">Horror</a></li>
                                <li><a class="dropdown-item" asp-controller="Books" asp-action="FantasyBooks">Fantasy</a></li>
                                <li><a class="dropdown-item" asp-controller="Books" asp-action="CrimeBooks">Crime</a></li>
                                <li><a class="dropdown-item" asp-controller="Books" asp-action="MysteryBooks">Mystery</a></li>
                                <li><a class="dropdown-item" asp-controller="Books" asp-action="RomanceBooks">Romance</a></li>
                                <li><a class="dropdown-item" asp-controller="Books" asp-action="AdventureBooks">Adventure</a></li>
                                <li><a class="dropdown-item" asp-controller="Books" asp-action="HistoricalBooks">Historical</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#!" id="dropdown03" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="bi bi-list"></i> Arabic Categoties <i class="tf-ion-chevron-down"></i></a>
                            <ul class="dropdown-menu" aria-labelledby="dropdown03">
                                <li><a class="dropdown-item" asp-controller="Books" asp-action="ArabicHorrorBooks">Horror</a></li>
                                <li><a class="dropdown-item" asp-controller="Books" asp-action="ArabicFantasyBooks">Fantasy</a></li>
                                <li><a class="dropdown-item" asp-controller="Books" asp-action="ArabicCrimeBooks">Crime</a></li>
                                <li><a class="dropdown-item" asp-controller="Books" asp-action="ArabicMysteryBooks">Mystery</a></li>
                                <li><a class="dropdown-item" asp-controller="Books" asp-action="ArabicRomanceBooks">Romance</a></li>
                                <li><a class="dropdown-item" asp-controller="Books" asp-action="ArabicAdventureBooks">Adventure</a></li>
                                <li><a class="dropdown-item" asp-controller="Books" asp-action="ArabicHistoricalBooks">Historical</a></li>
                            </ul>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#!" id="dropdown03" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> <i class="bi bi-gear"></i> Management <i class="tf-ion-chevron-down"></i></a>
                                <ul class="dropdown-menu" aria-labelledby="dropdown03">
                                    <li><a class="dropdown-item" asp-controller="Authors" asp-action="Index"><i class="bi bi-pencil"></i> Authors</a></li>
                                    <li><a class="dropdown-item" asp-controller="Books" asp-action="Index"><i class="bi bi-book"></i> Books</a></li>
                                    <li><a class="dropdown-item" asp-controller="Roles" asp-action="Index"><i class="bi bi-card-text"></i> Roles</a></li>
                                    <li><a class="dropdown-item" asp-controller="Users" asp-action="Index"><i class="bi bi-people-fill"></i> Users</a></li>
                                </ul>
                            </li>
                        }
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </nav>
        </div>
    </header>
    <script src="~/plugins/jquery/jquery.js"></script>
    <script src="~/plugins/bootstrap/bootstrap.min.js"></script>
    <script src="~/plugins/slick/slick.min.js"></script>
    <script src="~/js/script.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>